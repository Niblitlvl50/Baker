{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "C++ Launch game",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/bin/spritebaker",
            "args": [
                "-width", "512",
                "-height", "512",
                "-bg_color", "255 0 255 255",
                "-trim_images",
                "-input", "res/cat-walk1.png res/cat-walk2.png",
                "-output", "packed_image.png"
                ],
            "stopAtEntry": false,
            "cwd": "${workspaceRoot}/res",
            "environment": [],
            "externalConsole": false,
            "linux": {
                "MIMode": "gdb"
            },
            "osx": {
                "MIMode": "lldb"
            },
            "windows": {
                "MIMode": "gdb"
            }
        }
    ]
}