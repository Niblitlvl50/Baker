{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "C++ Launch game",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/bin/spritebaker",
            "args": [    
                "-width", "512",
                "-height", "512",
                "-padding", "4",
                "-bg_color", "255 0 255 255",
                "-trim_images",
                "-sprite_format",
                "-input", "res/cat-bump.png res/cat-jump1.png res/cat-jump2.png res/cat-jump3.png res/cat-stand1.png res/cat-stand2.png res/cat-turn1.png res/cat-walk1.png res/cat-walk2.png",
                "-output", "res/baked_image.png"                
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceRoot}",
            "environment": [],
            "externalConsole": false,
            "linux": {
                "MIMode": "gdb"
            },
            "osx": {
                "MIMode": "lldb"
            },
            "windows": {
                "MIMode": "gdb"
            }
        }
    ]
}