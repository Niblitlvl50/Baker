{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "command": "sh",
    "suppressTaskName": true,
    "isShellCommand": true,
    "showOutput": "always",
    "tasks": [
        {
            "taskName": "build",
            "isBuildCommand": true,
            "args": ["-c", "make -j8"]
        },
        {
            "taskName": "clean",
            "isBuildCommand": false,
            "args": ["-c", "make clean"]
        },
        {
            "taskName": "cmake",
            "isBuildCommand": false,
            "args": ["-c", "cmake ."]
        },
        {
            "taskName": "run",
            "isTestCommand": true,
            "args": [
                "./.vscode/run_task.sh",
                "spritebaker",
                "-width 512",
                "-height 512",
                "-padding 4",
                "-bg_color 255 0 255 255",
                "-trim_images",
                "-sprite_format",
                "-input cat-bump.png cat-jump1.png cat-jump2.png cat-jump3.png cat-stand1.png cat-stand2.png cat-turn1.png cat-walk1.png cat-walk2.png",
                "-output baked_image.png"
            ]
        }
    ]
}