{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "command": "sh",
    "suppressTaskName": true,
    "isShellCommand": true,
    "showOutput": "always",
    "tasks": [
        {
            "taskName": "build",
            "isBuildCommand": true,
            "args": ["-c", "make -j8"]
        },
        {
            "taskName": "clean",
            "isBuildCommand": false,
            "args": ["-c", "make clean"]
        },
        {
            "taskName": "cmake",
            "isBuildCommand": false,
            "args": ["-c", "cmake ."]
        },
        {
            "taskName": "baker",
            "isTestCommand": true,
            "args": [
                "./run_task.sh",
                "baker",
                "-width 512",
                "-height 512",
                "-padding 4",
                "-bg_red 255",
                "-bg_green 0",
                "-bg_blue 255",
                "-bg_alpha 255",
                "-input cat-bump.png cat-jump-1.png cat-jump-2.png cat-jump-3.png cat-stand-1.png cat-stand-2.png cat-turn-1.png cat-walk-1.png cat-walk-2.png",
                "-output baked_image.png"
                ]
        }
    ]
}