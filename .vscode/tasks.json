{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "taskName": "build",
            "command": "make",
            "args": [
                "-j8"
            ],
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "taskName": "clean",
            "command": "make",
            "args": [
                "clean"
            ],
            "type": "process",
            "problemMatcher": []
        },
        {
            "taskName": "cmake",
            "command": "cmake",
            "args": [
                "."
            ],
            "type": "process",
            "problemMatcher": []
        },
        {
            "taskName": "run",
            "type": "process",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "command": "./bin/spritebaker",
            "args": [
                "-width",
                "512",
                "-height",
                "512",
                "-padding",
                "4",
                "-bg_color",
                "255 0 255 255",
                "-trim_images",
                "-input",
                "res/cat-bump.png res/cat-jump1.png res/cat-jump2.png res/cat-jump3.png res/cat-stand1.png res/cat-stand2.png res/cat-turn1.png res/cat-walk1.png res/cat-walk2.png",
                "-output",
                "baked_image.png"
            ],
            "problemMatcher": []
        }
    ]
}